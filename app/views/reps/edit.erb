<h1>Edit Rep</h1>
<%address = @rep.address.split(",")%>
<form action="/reps/edit/<%=@rep.id%>" method="POST">
    <div class="form-input">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <p>
        <label for="rep_title">Title: </label>
        <input type="text" name="rep[title]" id="rep_title" value="<%=@rep.title%>">
    </p>
    <p>
        <label for="rep_name">Name: </label>
        <input type="text" name="rep[name]" id="rep_name" value="<%=@rep.name%>">
    </p>
    <p>
        <label for="rep_address">Address: </label>
        <input type="text" name="rep[address][]" id="rep_address" value="<%=address[0].strip%>">
    </p>
    <p>
        <label for="rep_address_city">City: </label>
        <input type="text" name="rep[address][]" id="rep_address_city" value="<%=address[1].strip%>">
    </p>
    <p>
        <label for="rep_address_state">State: </label>
        <input type="text" name="rep[address][]" id="rep_address_state" value="<%=address[2].strip%>">
    </p>
    <p>
        <label for="rep_address_zip">Zip: </label>
        <input type="text" name="rep[address][]" id="rep_address_zip" value="<%=address[3].strip%>">
    </p>
    <p>
        <label for="rep_party">Party: </label>
        <input type="text" name="rep[party]" id="rep_party" value="<%=@rep.party%>">
    </p>
    <p>
        <label for="rep_phone">Phone: </label>
        <input type="text" name="rep[phone]" id="rep_phone" value="<%=@rep.phone%>">
    </p>
    <p>
        <label for="rep_website">Website: </label>
        <input type="text" name="rep[website]" id="rep_website" value="<%=@rep.website%>">
    </p>
    <p>
        <label for="rep_facebook">Facebook: </label>
        <input type="text" name="rep[facebook]" id="rep_facebook" value="<%=@rep.facebook%>">
    </p>
    <p>
        <label for="rep_twitter">Twitter: </label>
        <input type="text" name="rep[twitter]" id="rep_twitter" value="<%=@rep.twitter%>">
    </p>
    </div>
    <input type="submit" id="change_rep" value="Save Changes">
</form>